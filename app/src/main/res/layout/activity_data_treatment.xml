<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".treatment.DataTreatment">


    <LinearLayout
        android:id="@+id/linegb"
        android:layout_width="wrap_content"
        android:layout_height="13sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/treatmenUser_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/treatmentNama_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/ivee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="GALLERY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="TREATMENT"/>

        <RelativeLayout
            android:id="@+id/rp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="85dp"
            android:background="@color/colorPrimary"></RelativeLayout>


    </RelativeLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cvt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ivee"
        android:layout_marginTop="6dp"
        android:layout_above="@+id/btn"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:id="@+id/listtreatment"
            android:layout_height="match_parent"
            />

    </androidx.cardview.widget.CardView>
</RelativeLayout>