<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_height="110dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="100dp">


        <ImageView
            android:id="@+id/img_list_riwayat"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:src="@drawable/inst43"
            />

        <RelativeLayout
            android:id="@+id/relaJT"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_list_riwayat">

            <TextView
                android:id="@+id/jdl_riwayat"
                android:textSize="13sp"
                android:hint="Perawatan"
                android:textStyle="bold"
                android:textColor="#00574B"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/id_riwayat"
                android:textSize="13sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/jdl_riwayat"
                android:layout_marginLeft="15dp"/>


            <TextView
                android:id="@+id/kdpg"
                android:textSize="13sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_riwayat"
                android:layout_marginLeft="15dp"/>

        </RelativeLayout>



        <TextView
            android:id="@+id/tgl_riwayat"
            android:textSize="11sp"
            android:hint="Tanggal"
            android:textColor="#00574B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_list_riwayat"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/relaJT"
            android:layout_marginTop="15dp"/>

     <!--   <TextView
            android:id="@+id/idRp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp."
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/relaJT"/>

        <TextView
            android:id="@+id/biaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/idRp"
            android:layout_centerVertical="true"
            /> -->

    </RelativeLayout>


</androidx.cardview.widget.CardView>