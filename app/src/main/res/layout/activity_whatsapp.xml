<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".Whatsapp">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etNomorHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Nomor HP"
            android:fontFamily="@font/notosanskr_regular"
            android:text="082243269191"
            android:textSize="16sp"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnOpenWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="#25D366"
        android:fontFamily="@font/notosanskr_regular"
        android:text="Buka Whatsapp"/>

    <LinearLayout
        android:id="@+id/linewa"
        android:layout_width="wrap_content"
        android:layout_height="13sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wa_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/wa_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

</LinearLayout>