<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".testi.Testimoni">

    <ScrollView
        android:id="@+id/sc_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buat Testimoni"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="23sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ti_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/ti_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukan Judul"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edt_judul_iklan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:hint="Secara Singkat"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambahkan Keterangan"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edt_ket_iklan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:hint="Tambahkan Dengan Benar"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Foto"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                />


            <ImageView
                android:id="@+id/img_iklan"
                android:layout_width="match_parent"
                android:background="@drawable/back_image"
                android:layout_height="200dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/button_camera_iklan"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/camera"

                    />

                <ImageView
                    android:id="@+id/btn_gallery_iklan"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/gallery2"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <!--<Button
                android:id="@+id/button_camera_iklan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="TAMBAH FOTO"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btn_gallery_iklan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#18D0E9"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Ambil Dari Gallery"
                android:textColor="#ffffff"/>-->


            <Button
                android:id="@+id/button_simpan_iklan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#18D0E9"
                android:layout_marginTop="20dp"
                android:text="Simpan"
                android:textColor="#ffffff"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>